<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".EditCarActivity">

    <EditText
        android:id="@+id/editModelNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du modÃ¨le"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description de la voiture"
        android:layout_below="@id/editModelNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prix par nuit"
        android:inputType="numberDecimal"
        android:layout_below="@id/editDescriptionEditText"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:layout_below="@id/editPriceEditText"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
